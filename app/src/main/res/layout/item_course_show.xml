<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_course_show_ll"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical">
        <!--图片展示-->
        <ImageView
            android:id="@+id/item_course_show_iv_course"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_loading_defalut" />
        <!--信息展示-->
        <LinearLayout
            android:id="@+id/item_course_show_ll_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_color"
            android:orientation="vertical">
            <!--这是教程名字-->
            <TextView
                android:id="@+id/item_course_show_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="这是教程名字"
                android:textColor="@color/whiteTextColor"
                android:textSize="20sp" />
            <!--作者名字-->
            <TextView
                android:id="@+id/item_course_show_tv_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="by这是作者名字"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp" />

            <include layout="@layout/lack_line_lack" />

            <TextView
                android:id="@+id/item_course_show_tv_collect_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="收藏和人气"
                android:textColor="@color/gray_text_color"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>